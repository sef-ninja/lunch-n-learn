package ninja.sef.simpleindex;

public class ConsoleUtilities {
    public static void printHeader() {
        // Print header
        String triangle = "\u25B2";
        System.out.println();
        System.out.println("     " + triangle + "                                                 " + triangle);
        System.out.println("    " + triangle + " " + triangle + "     The Legend of Lucene: Ocarina of Text     " + triangle + " " + triangle);
        System.out.println();
        System.out.println("                    ");
    }
}
