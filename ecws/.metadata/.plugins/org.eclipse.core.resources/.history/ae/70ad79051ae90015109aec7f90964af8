package ninja.sef.simpleindex.query;

import java.io.File;

import org.apache.lucene.index.IndexReader;
import org.apache.lucene.index.Term;
import org.apache.lucene.search.IndexSearcher;
import org.apache.lucene.search.TermQuery;
import org.apache.lucene.store.FSDirectory;

import ninja.sef.simpleindex.Operation;

public class TermQueryOperation implements Operation {

    @Override
    public void execute(String indexDir) {
        System.out.println("**** Executing term query on index at: " + indexDir);
        Term term = new Term("description", "labyrinth");
        TermQuery termQuery = new TermQuery(term);
        
        IndexReader indexReader = FSDirectory.open(new File(indexDir));
        
        //IndexSearcher searcher = new IndexSearcher(new File(indexDir));
    }

}
